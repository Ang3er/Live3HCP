<mvc:View controllerName="live3.view.Master" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:shellfooter="sap.ushell.ui.footerbar">

    <Page title="{i18n>MASTER_TITLE}">

        <content>

            <PullToRefresh id="pullToRefresh" refresh="handleRefresh" />

            <List items="{/Clusters}" mode="{device>/listMode}" select="handleSelect" growing="true" growingScrollToLoad="true">
                <items>
                    <ObjectListItem type="{device>/listItemType}" title="Cluster {clusterNumber}" number="{users}" numberUnit="Tweeters" press="handleSelect">

                        <attributes>
                            <ObjectAttribute text="Influence:{influence}, Stance:{stance}" />
                        </attributes>
                    </ObjectListItem>
                </items>
            </List>

        </content>

        <footer>
            <Bar>
                <contentMiddle>
                    <Button icon="sap-icon://scatter-chart" tooltip="Perform Clustering" press="handleCluster" />
                    <Button icon="sap-icon://media-play" tooltip="Start Tracking" press="handleStartDialog" />
                    <Button icon="sap-icon://media-pause" tooltip="Stop Tracking" press="handleStop" />
                    <Button icon="sap-icon://media-rewind" tooltip="Reset System" press="handleReset" />
                </contentMiddle>
            </Bar>
        </footer>

    </Page>

</mvc:View>
