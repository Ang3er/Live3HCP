<mvc:View controllerName="live3.view.Tweets" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core">

    <Page title="" class="sapUiFioriObjectPage" showNavButton="true" navButtonPress="handleNavButtonPress">

        <ObjectHeader title="@{user}" number="{tweetCount}" numberUnit="Tweets">
            <attributes>
                <ObjectAttribute text="Influence:{influence}, Stance:{stance}" />
            </attributes>
        </ObjectHeader>

        <List items="{Tweets}">
            <FeedListItem sender="{user}" timestamp="{created}" text="{text}" />
        </List>

    </Page>

	</mvc:View>
